<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/v2_normal_bg"
     >
     
	<include
		     layout="@layout/common_title_bar"
		     />
        
        <LinearLayout 
            	android:id="@+id/layout_wraning"
                android:layout_width="match_parent"
    			android:layout_height="35dp"
    			android:orientation="horizontal"
    			android:layout_marginTop="4dp"
    			android:layout_marginBottom="4dp"
    			android:gravity="center_vertical"
    			android:background="@color/warning_bg"
    			android:visibility="gone"
            >
            <ImageView 
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:src="@drawable/error"
                />
            <TextView 
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginLeft="12dp"
    			android:text="请于 sdcard 根目录放入联系人文档"  
    			android:textSize="@dimen/txt_size_px_18"
    			android:textColor="@color/black"
                />
            
            <LinearLayout 
                android:id="@+id/layout_warning_ok"
                android:layout_width="0dp"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
    			android:gravity="right"
    			android:clickable="true"
                >
            <TextView 
                android:id="@+id/text_ok"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:layout_gravity="right|center_vertical"
    			android:layout_marginRight="10dp"
    			android:text="确定"
    			android:textSize="@dimen/txt_size_px_22"
    			android:textColor="@color/v2_color_blue_highlight"
    			android:background="@color/nullcolor"
    			android:clickable="false"
                />
            </LinearLayout>
        </LinearLayout>
        
